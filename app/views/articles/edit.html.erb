<h1> EDIT YOUR ARTICLE BELOW!</h1>

<div class="form">
  <%= form_for @article do |f| %>
    <div class="title">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="description">
      <%= f.label :description %>
      <%= f.text_area :description, size: '60x6' %>
    </div>

    <div class='submit'>
      <%= f.submit %>
    </div>

  <% end %>
</div>
