<!DOCTYPE html>
<html>
<head>
  <title>CraigslistJr</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user %>
    You are signed in as <%= current_user.username %> | <%= link_to "logout", '/logout' %>
  <% else %>
   <%= link_to 'login', '/login' %> |    <%= link_to 'signup', '/signup' %>
  <% end %>
    <div class="clearfix"> </div>
    <div id="content">
      <%= yield %>
    </div>
</body>
</html>
